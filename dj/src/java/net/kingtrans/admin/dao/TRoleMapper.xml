<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.kingtrans.admin.dao.TRoleMapper">
	<resultMap id="BaseResultMap" type="net.kingtrans.admin.pojo.TRole">
		<id column="roleid" property="roleid" jdbcType="VARCHAR" />
		<result column="rolename" property="rolename" jdbcType="VARCHAR" />
		<result column="roledesc" property="roledesc" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		roleid, rolename, roledesc
	</sql>
	
	<select id="getUsingRole" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from t_role	where roleid in (select distinct roleid from t_user)
	</select>
	<select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from t_role
		where roleid = #{roleid,jdbcType=VARCHAR}
	</select>
	<select id="selectAll" resultMap="BaseResultMap" parameterType="net.kingtrans.admin.pojo.TRole">
		select
		<include refid="Base_Column_List" />
		from t_role
		<where>
			<if test="roleid != null">
				and roleid like '%'+ #{roleid}+'%'
			</if>
			<if test="rolename != null">
				and rolename like '%'+ #{rolename} +'%'
			</if>
		</where>
	</select>
	<delete id="deleteByPrimaryKey" parameterType="java.lang.String">
		delete from t_role
		where roleid = #{roleid,jdbcType=VARCHAR}
	</delete>
	
	<delete id="deleteByPrimaryKeys"  parameterType="java.lang.String">
		delete from t_role
		where roleid in(
		<foreach collection="roleid" item="item" separator=",">
			#{item}
		</foreach>
		)
	</delete>
	
	<insert id="insertSelective" parameterType="net.kingtrans.admin.pojo.TRole">
		insert into t_role
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="roleid != null">
				roleid,
			</if>
			<if test="rolename != null">
				rolename,
			</if>
			<if test="roledesc != null">
				roledesc,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="roleid != null">
				#{roleid,jdbcType=VARCHAR},
			</if>
			<if test="rolename != null">
				#{rolename,jdbcType=VARCHAR},
			</if>
			<if test="roledesc != null">
				#{roledesc,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>
	<update id="updateByPrimaryKeySelective" parameterType="net.kingtrans.admin.pojo.TRole">
		update t_role
		<set>
			<if test="rolename != null">
				rolename = #{rolename,jdbcType=VARCHAR},
			</if>
			<if test="roledesc != null">
				roledesc = #{roledesc,jdbcType=VARCHAR},
			</if>
		</set>
		where roleid = #{roleid,jdbcType=VARCHAR}
	</update>
</mapper>